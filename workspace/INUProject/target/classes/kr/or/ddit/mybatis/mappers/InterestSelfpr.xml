<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.selfpr.dao.LikeDAO">

	<!-- 관심인재 전체 select 쿼리 -->
	<select id="selectLikeList" parameterType="PagingVO" resultType="kr.or.ddit.selfpr.vo.LikeVO">
		SELECT *
		FROM INTEREST
	</select>
	
	<select id="selectTotalRecord" parameterType="PagingVO" resultType="int">
		SELECT COUNT(*)
		FROM INTEREST
	</select>
	
	<!-- 관심인재 insert 쿼리 -->
	<insert id="insertLike" parameterType="kr.or.ddit.selfpr.vo.LikeVO">
		<selectKey order="BEFORE" resultType="int" keyProperty="inteNo">
			SELECT INTE_SEQ.NEXTVAL
			FROM DUAL
		</selectKey>
			INSERT INTO INTEREST (
		    INTE_NO,
		    INTE_DATE,
		    PR_NO
		) VALUES (
		    #{inteNo,jdbcType=NUMERIC}
		    , SYSDATE
		    , #{prNo,jdbcType=NUMERIC}
		)
	</insert>	
	
	<!-- 관심인재 delete 쿼리 -->
	<delete id="">
	
	</delete>
</mapper>